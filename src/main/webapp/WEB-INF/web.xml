<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>LoginPage</servlet-name>
        <servlet-class>com.ex.Servlets.LoginPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SubmitReimbursement</servlet-name>
        <servlet-class>com.ex.Servlets.Employee.SubmitReimbursement</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateInformation</servlet-name>
        <servlet-class>com.ex.Servlets.Employee.UpdateInformation</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterEmployee</servlet-name>
        <servlet-class>com.ex.Servlets.Admin.RegisterEmployee</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewEmployees</servlet-name>
        <servlet-class>com.ex.Servlets.Admin.ViewEmployees</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogOut</servlet-name>
        <servlet-class>com.ex.Servlets.LogOut</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewEmployeeInformation</servlet-name>
        <servlet-class>com.ex.Servlets.Employee.ViewEmployeeInformation</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewEmployeeReimbursementRequests</servlet-name>
        <servlet-class>com.ex.Servlets.Employee.ViewReimbursements</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ApproveReimbursement</servlet-name>
        <servlet-class>com.ex.Servlets.Admin.ApproveReimbursement</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DenyReimbursement</servlet-name>
        <servlet-class>com.ex.Servlets.Admin.DenyReimbursement</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewPendingReimbursements</servlet-name>
        <servlet-class>com.ex.Servlets.Admin.ViewPendingReimbursements</servlet-class>
    </servlet>



    <servlet-mapping>
        <servlet-name>LogOut</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginPage</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SubmitReimbursement</servlet-name>
        <url-pattern>/submitReimbursement</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateInformation</servlet-name>
        <url-pattern>/updateInformation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterEmployee</servlet-name>
        <url-pattern>/registerEmployee</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewEmployees</servlet-name>
        <url-pattern>/viewEmployees</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewEmployeeInformation</servlet-name>
        <url-pattern>/viewEmployeeInformation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewEmployeeReimbursementRequests</servlet-name>
        <url-pattern>/viewEmployeeReimbursementRequests</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ApproveReimbursement</servlet-name>
        <url-pattern>/approveReimbursement</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DenyReimbursement</servlet-name>
        <url-pattern>/denyReimbursement</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewPendingReimbursements</servlet-name>
        <url-pattern>/viewPendingReimbursements</url-pattern>
    </servlet-mapping>



</web-app>
